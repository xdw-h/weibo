<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="default" extends="json-default" >
	<interceptors>
			<interceptor name="character" class="characterInterceptor"></interceptor>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="character"></interceptor-ref>
			</interceptor-stack>
	</interceptors>
	<!-- 	<default-interceptor-ref name="myStack"></default-interceptor-ref> --> <!-- 全局拦截 -->
	<action name="test" class="Commentbean"  method="test">
		<result type="json">
			<param name="root">list</param>
		</result>
	</action>
	<action name="test2" class="Commentbean"  method="testInterceptor">
 		<interceptor-ref name="myStack"></interceptor-ref>
		<result type="json">
			<param name="root">js</param>
		</result>
	</action>
	<action name="test3" class="Commentbean" method="test3">
		<result>index.jsp</result>
	</action>
	<action name="login" class="com.weibo.action.AdminAction" method="login">
       <result name="success">/main.jsp</result>
       <result name="input">/login-register.jsp</result>
    </action>
    <action name="queryName" class="com.weibo.action.AdminAction" method="queryName">
		<result type="json">
			<param name="root">info</param>
		</result>
	</action>
	<action name="register" class="com.weibo.action.AdminAction" method="register">
       <result name="success">/login-register.jsp</result>
    </action>
    		<action name="logout" class="com.weibo.action.AdminAction" method="logout">
			<result>/login-register.jsp</result>
		</action>
		<action name="updateload" class="com.weibo.action.AdminAction"
			method="updateload">
			<result name="success">/update.jsp</result>
		</action>
		<action name="updateAdmin" class="com.weibo.action.AdminAction"
			method="updateAdmin">
			<result name="success">/main.jsp</result>
		</action>
		
<action name="search" class="WBSAction" >
	<result  type="json">
</result></action>
<action name="search2" class="WBSAction">
	<result name="success">/show.jsp
	</result>
</action>

	<action name="delete" class="WBDAction">
		<result name="success" type="redirectAction">search2
		</result>
	</action>
		<action name="turncomment" class="Commentbean" method="turncomment">
			<result name="success">/index.jsp</result>
		</action>
	</package>
</struts>    
